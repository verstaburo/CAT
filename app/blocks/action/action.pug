mixin action(link)
  +b.action&attributes(attributes)
    +e.SPAN.line
    +e.A(href=link||'#').link
      block

mixin small-action(path)
  if path
    +b.A(href=path).small-action&attributes(attributes)
      block
  else
    +b.small-action&attributes(attributes)
      block

mixin icon-plus()
  +e.SVG.icon-plus&attributes(attributes)
    line(x1='7', x2='7', y1='0', y2='14')
    line(x1='0', x2='14', y1='7', y2='7')

mixin small-action-text()
  +e.SPAN.text&attributes(attributes)
    block

mixin small-action-icon(path)
  +small-action(path)._icon&attributes(attributes)
    +icon-plus()
    +small-action-text()
      block
