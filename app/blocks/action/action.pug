mixin action()
  +b.action&attributes(attributes)
    +e.SPAN.line
    +e.A(href='#').link
      block

mixin small-action()
  +b.small-action&attributes(attributes)
    block

mixin icon-plus()
  +e.SVG.icon-plus&attributes(attributes)
    line(x1='7', x2='7', y1='0', y2='14')
    line(x1='0', x2='14', y1='7', y2='7')

mixin small-action-text()
  +e.SPAN.text&attributes(attributes)
    block

mixin small-action-icon()
  +small-action()._icon&attributes(attributes)
    +icon-plus()
    +small-action-text()
      block
