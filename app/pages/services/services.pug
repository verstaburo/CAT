extends ../../layouts/default
include ../../blocks/page-wrap/page-wrap
include ../../blocks/big-heading/big-heading
include ../../blocks/grid/grid
include ../../blocks/service-preview/service-preview

block head
  - var pageTitle = 'CAT - Список услуг'

block header
  -
    var data = getData('page-menu')
    data[0].active = true
  +header(data)

block content
  +page-wrap()
    +big-heading().__heading Наши услуги
    +b.services
      +service-preview('oversized', 'Негабаритные перевозки')
      +service-preview('logistics', 'Логистические услуги')
      +service-preview('rigging', 'Такелажные работы')
      +service-preview('load-lifting', 'Услуги грузоподъемных механизмов')
      +service-preview('repair', 'Ремонт спецтехники')
      +service-preview('international', 'Международные перевозки грузов')

block footer
  +footer()
